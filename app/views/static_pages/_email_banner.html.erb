<div class="alert alert-info alert-dismissible email_bar" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>

  <%= form_tag(controller: "static_pages", action: "new_user", method: "post", class:"")  do %>
    <div class="pull-left">
      Please enter your email address to receive DAMI updates:
    </div>
    <div class="pull-right">
      <%= text_field_tag :email, nil, placeholder:"Email" %>
      <%= submit_tag "Submit" %>
      <div class="left_align red">
        <% flash.each do |key, value| %>
          <% if key == "danger" %>
          <%= value %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>



</div>
