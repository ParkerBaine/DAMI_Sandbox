<%
  def dami_fg_func_links(txt_sectionTitle, arr_linkList)
      %>

      <!-- ======================================================= -->

      <div class="dami_fg_col dark_blue
                  col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <h3>
            <%= txt_sectionTitle %>
          </h3>
          <div class="border"></div>

          <ul class="media-list">

            <% arr_linkList.each do |p| %>

            <li class="media">
              <a href='<%= p['dami_fg_link_path'] %>' target="_blank">
                <div class="media-left">
                  <i class="fa <%= p['dami_fg_link_icon'] %> fa-3x"></i>
                </div>
                <div class="media-body">
                  <h4 class="media-heading">
                    <%= p['dami_fg_link_name'] %>
                  </h4>
                  <p style="display: none;">
                    <%= p['dami_fg_link_path'] %>
                  </p>
                </div>
              </a>
            </li>

            <% end %>

          </ul>

      </div> 

      <!-- ======================================================= -->

      <%
  end
%>

