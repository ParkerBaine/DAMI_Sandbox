<%
  def dami_fg_func_sections(arr_sectionLinkListData)

    arr_sectionLinkListData.each do |p| 
      dami_fg_func_links(p['dami_fg_txt_sectionTitle'], p['dami_fg_arr_linkList'])
    end

  end
%>

